{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "products"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_name": {
      "type": "string"
    },
    "product_description": {
      "type": "text"
    },
    "price": {
      "type": "float"
    },
    "product_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "dollar",
        "euro",
        "pound"
      ]
    },
    "product_id": {
      "type": "biginteger"
    }
  }
}
